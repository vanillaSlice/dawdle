{
  "extends": [
    "config:base",
    ":prHourlyLimitNone"
  ],
  "pip_requirements": {
    "fileMatch": [
      "(^|/)requirements.*\\.txt$"
    ]
  },
  "docker-compose": {
    "fileMatch": [
      "(^|/)docker-compose\\.yml$"
    ]
  },
  "dockerfile": {
    "fileMatch": [
      "(^|/)[^/]*Dockerfile$"
    ]
  },
  "automerge": true,
  "major": {
    "automerge": false
  },
  "rebaseStalePrs": true
}
